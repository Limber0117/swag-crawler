[Unit]
Description=Node.js App reviews crawler from RabbitMQ queue
[Service]
PIDFile=/tmp/dequeue_10K_reviews.pid
User=<Your Username>
Group=<Your User Group>
Restart=always
KillSignal=SIGQUIT
WorkingDirectory=/home/<username>/swag-crawler/
ExecStart=/home/<username>/swag-crawler/dequeue_10K_reviews.js
[Install]
WantedBy=multi-user.target
